<!-- @format -->

<%- include('./partials/header') -%>

<h1>Compose</h1>

<form action="/compose" method="post">
  <div class="mb-3">
    <label class="form-label">Title</label>
    <input
      type="text"
      name="blogTitle"
      class="form-control"
      autocomplete="off"
    />
  </div>

  <div class="mb-3">
    <label class="form-label">Post</label>
    <textarea
      name="blogContent"
      class="form-control"
      rows="5"
      autocomplete="off"
    ></textarea>
  </div>

  <button type="submit" class="btn btn-primary">Publish</button>
</form>

<%- include('./partials/footer') -%>
